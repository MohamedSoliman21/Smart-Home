    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
